{% extends 'admin.html.twig' %}

{% block title %}Préparation des commandes{% endblock %}



{% block body %}
    <div class="container">
        <h1>Préparation des commandes</h1>
        
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Crée le</th>
                    <th>Commande</th>
                    <th>Client</th>
                    <th>Statut</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for orderItem in orderItems %}
                    <tr>
                        <td>{{ orderItem.id }}</td>
                        <td>{{ orderItem.product.name }}</td>
                        <td>{{ orderItem.quantity }}</td>
                        <td>{{ orderItem.totalPrice }}</td>
                        <td>{{ orderItem.createdAt|date('m-d H:i') }}</td>
                        <td>{{ orderItem.orders.id }}</td>
                        <td>{{ orderItem.orders.user.id }}</td>
                        <td>{{ orderItem.status }}</td>
                        <td>
                            <form action="{{ path('update_status', {'id': orderItem.id}) }}" method="post">
                                <input type="hidden" name="status" value="préparé">
                                <button type="submit" class="btn btn-success"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                                </svg></button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}